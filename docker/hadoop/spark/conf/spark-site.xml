<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <property>
        <name>spark.app.name</name>
        <value>HDFS Spark Testing App</value>
    </property>
    <property>
        <name>spark.master</name>
        <value>yarn</value>
    </property>
    <property>
        <name>spark.submit.deployMode</name>
        <value>client</value>
    </property>
    <property>
        <name>spark.testing.memory</name>
        <value>471859200</value>
    </property>
    <property>
        <name>spark.yarn.jars</name>
        <value>/opt/it/lib/*.jar</value>
    </property>
    <property>
        <name>spark.yarn.access.hadoopFileSystems</name>
        <value>hdfs://ns:8020/</value>
    </property>
    <property>
        <name>spark.sql.warehouse.dir</name>
        <value>hdfs://ns/user/hive/warehouse</value>
    </property>
</configuration>